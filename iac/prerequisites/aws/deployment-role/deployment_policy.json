{
  "Statement": [
    {
      "Sid": "S3BackendBucketPermissions",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::${BACKEND_BUCKET}"
    },
    {
      "Sid": "S3BackendObjectPermissions",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject"
      ],
    "Resource": "arn:aws:s3:::${BACKEND_BUCKET}/*"
    },
    {
      "Sid": "S3BackendDynamoDBPermissions",
      "Effect": "Allow",
      "Action": [
        "dynamodb:DescribeTable",
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:DeleteItem"
      ],
      "Resource": "arn:aws:dynamodb:${REGION}:${ACCOUNT_ID}:table/${BACKEND_DYNAMODB_TABLE}"
    }
  ],
  "Version": "2012-10-17"
}